type Query {
    taskDetailsById(task_id: ID): TaskDetails
}

type Mutation {
    createTaskDetails(taskDetailsInput: TaskDetailsInput!): TaskDetails
    deleteTaskDetails(task_id: ID): Boolean
}

type TaskDetails {
    task_id: ID
    description: String
    interval_km: Int
    interval_months: Int
}

input TaskDetailsInput {
    description: String!
    interval_km: Int!
    interval_months: Int!
}